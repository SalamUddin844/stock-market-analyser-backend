{
    "version": 2,
    "builds": [
        {
            "src": "api/main.py",
            "use": "@vercel/python",
            "config": {
                "maxDuration": 30
            }
        }
    ],
    "routes": [
        {
            "src": "/api/static/(.*)",
            "dest": "/api/static/$1"
        },
        {
            "src": "/api/(.*)",
            "dest": "/api/main.py"
        },
        {
            "src": "/",
            "dest": "/api/templates/index.html"
        }
    ],
    "env": {
        "FLASK_ENV": "production",
        "API_KEY": "5GqlAgbTEug2mS2cjwhOQMJKuh7sLfAZ"
    },
    "cleanUrls": true,
    "build": {
        "env": {
            "PYTHON_VERSION": "3.9"
        }
    }
}